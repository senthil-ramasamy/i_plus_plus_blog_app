<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-md-9">
<h1>Listing Posts</h1>
    <% @posts.each do |post| %>
     <div class="jumbotron">
  <h1><%= post.title %></h1>
  <h4>By: <%= post.authorname %></h4>
  <p><%= post.body.first(100) %></p>
  <p><%= link_to 'Show', post, class:"btn btn-primary btn-lg" %></p>
</div>
    <% end %>
<br>
<%= link_to 'New Post', new_post_path %>
</div>
<div class="col-md-3">
  <h3> Recent Articles : </h3>
  <% @recent.each do |post| %>
  <strong><%= post.title %></strong>
  By: <%= post.authorname %> <a><%= link_to 'Read More', post %></a><br/>
  <% end %>
</div>
</div>
</div>